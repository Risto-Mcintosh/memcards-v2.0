{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true,
    "cypress/globals": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["jest", "cypress"],
  "rules": {
    "linebreak-style": ["error", "windows"],
    "react/jsx-filename-extension": "off",
    "react/forbid-prop-types": "off",
    "comma-dangle": "off"
  },
  "overrides": [
    {
      "files": ["*.spec.js"],
      "rules": {
        "spaced-comment": "off"
      }
    }
  ]
}
